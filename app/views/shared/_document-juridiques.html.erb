<div class="white-back" id="sticky-doc">
  <h3 class="background-blue">Document juridiques</h3>
  <ul>
    <% @house.documents.each do |document| %>
      <li>
      <div class="pdf-link">
        <%= link_to "<i class='far fa-file-pdf fa-2x' data-toggle='tooltip' data-placement='bottom' title='Télécharger'></i>".html_safe ,
         document.pdf.url, format: 'pdf', target: "_blank" %>
      </div>
      <div class="doc-descr">
      <strong><%= document.document_type.name %></strong> - <%= document.id %> <br> <%= document.created_at.strftime("%d/%m/%Y")%>
      </div>
      <div class="pdf-sign">
        <%= link_to "e sign", esign_house_document_path(@house,document), remote: true %>
      </div>
      <div class="doc-signature-status">
        <% if document.docusign_envelope_id = "0" %>
        <i class='fas fa-pen-fancy fa-2x icon-red ' data-toggle="tooltip" data-placement="bottom" data-html="true" title="vérifier votre pdf avant de l'envoyer pour signature"></i>
        <% else %>
        <i class='fas fa-pen-fancy fa-2x icon-green' data-toggle="tooltip" data-placement="bottom" data-html="true" title="en attente de signature"></i>
        <% end %>
      </div>
      </li>
    <% end %>
  </ul>
  <div class="text-center">
    <%= simple_form_for [@house, @document] do |f| %>
      <%= f.association :document_type %>
      <%= f.button :button, "Créer votre document", class: "btn-primary".html_safe, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Chargement"} %>
    <% end %>
  </div>
</div>
