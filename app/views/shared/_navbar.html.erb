<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to houses_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if  current_page?(houses_path) %>
        <%= link_to "Dashboard", houses_path, class: "navbar-wagon-item navbar-wagon-link nav-link-bold"%>
      <% else %>
        <%= link_to "Dashboard", houses_path, class: "navbar-wagon-item navbar-wagon-link"%>
      <% end %>
      <%= link_to "Config", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "#", class: "i-notif" do %>
        <i class="far fa-bell"></i>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/CharlesGTY", class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-power-off"></i><%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Nous Contacter", houses_path , class: "btn-search-bar btn-contact" %>
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to houses_path do %>
              <i class="fas fa-user"></i><%= t(".profile", default: "dashboard") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fas fa-cog"></i><%= t(".profile", default: "config") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-power-off"></i><%= t(".sign_out", default: "Déconnexion") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "Nous Contacter", houses_path , class: "btn-search-bar btn-contact" %>
          </li>
          <li>
            <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

