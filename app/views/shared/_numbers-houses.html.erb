<div class="row">
  <div class="col-sm-3 col-xs-12">
    <div class="filter-card z-depth-1 houses_number <%= "grey-back" unless params[:exclusive].present?%>">
      <%= link_to houses_path do %>
      <p> Biens Ã  la vente</p><p><span class="index-numb"> <%= House.count %> </span> </p>
      <% end %>
   </div>
  </div>
  <div class="col-sm-3 col-xs-12">
    <div class="filter-card z-depth-1 exclusive_houses <%= "grey-back" if params[:exclusive].present?%>">
      <%= link_to houses_path(exclusive: true) do %>
      <p> Biens exclusifs <i class="fas fa-star iconcog" data-toggle="tooltip" data-placement="bottom" title="exclusive"></i></p><p><span class="index-numb">
        <%= House.where(exclusive: true).count %>
        </span> </p>
        <% end %>
    </div>
  </div>
  <div class="col-sm-3 col-xs-12">
    <div class="filter-card z-depth-1">
      <%= link_to "", houses_path %>
      <p> Dossiers incomplets</p><p><span class="index-numb">
        <% if !Document.all.empty? %>
        <%= House.all.reject {|h| (Document.all.map{|d| d.house_id}).uniq.include?(h.id)}.count %>
        <% else %>
        <%= House.all.count %>
        <% end %>
      </span> </p>
    </div>
  </div>
  <div class="col-sm-3 col-xs-12">
    <div class="filter-card z-depth-1">
      <%= link_to "", houses_path %>
      <p> Signatures en attente</p><p><span class="index-numb">
      <% if !Document.all.empty? %>
      <%= Document.all.select {|d| d.docusign_envelope_id != "0"}.count %>
      <% else %>
        0
        <% end %>
       </span> </p>
    </div>
  </div>
</div>


