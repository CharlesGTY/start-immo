        <fieldset class="form-group radio_buttons optional house_usage_type">
          <legend class="col-form-label pt-0">Bien à usage</legend>
          <input type="hidden" name="house[usage_type]" value="">
          <div class="form-check"><input class="form-check-input radio_buttons optional" type="radio" value="Domestique" name="house[usage_type]" id="house_usage_type_domestique"><label class="collection_radio_buttons" for="house_usage_type_domestique"><i class="fas fa-home fa-2x"></i><b>Domestique</b></label></div>
